---
import About from './pages/About.astro';
import Work from './pages/Work.astro';
import Blog from './pages/Blog.astro';
import Contact from './pages/Contact.astro';
import Devlog from './pages/Devlog.astro';
---

<div id="about-container" class="fade-section show">
  <About />
</div>

<div id="work-container" class="fade-section">
  <Work />
</div>

<div id="blog-container" class="fade-section">
  <Blog />
</div>

<div id="contact-container" class="fade-section">
  <Contact />
</div>

<div id="devlog-container" class="fade-section">
  <Devlog />
</div>

<style>
.fade-section {
  opacity: 0;
  transform: translateY(20px);
  transition: opacity 0.4s ease, transform 0.4s ease;
  position: absolute;
  width: 100%;
  pointer-events: none;
  user-select: none;
}

.fade-section.show {
  opacity: 1;
  transform: translateY(0);
  z-index: 1;
  pointer-events: auto;
  user-select: auto;
}

.fade-section.hide {
  opacity: 0;
  transform: translateY(5px);
  z-index: 0;
  pointer-events: none;
  user-select: none;
}
</style>

<script type="module" client:load>
const sections = {
  about: document.getElementById('about-container'),
  work: document.getElementById('work-container'),
  blog: document.getElementById('blog-container'),
  contact: document.getElementById('contact-container'),
  devlog: document.getElementById('devlog-container')
};

const navTabs = document.querySelectorAll('.sidebar .tab');

// Switch content
function switchContent(target) {
  Object.keys(sections).forEach(key => {
    const section = sections[key];

    if (key === target) {
      section.classList.remove('hide');
      section.classList.add('show');
      window.scrollTo({ top: 0, behavior: 'smooth' });
    } else {
      section.classList.remove('show');
      section.classList.add('hide');
    }
  });
}

// Sidebar tab click
navTabs.forEach(tab => {
  tab.addEventListener('click', e => {
    e.preventDefault();
    switchContent(tab.dataset.target);
  });
});

// Dropdown event
window.addEventListener('switchContent', e => {
  switchContent(e.detail.target);
});
</script>
