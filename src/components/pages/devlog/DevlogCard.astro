---
const { entry } = Astro.props;
const { title, date, description } = entry.data;
---

<article class="devlog-card"
         data-title={title}
         data-date={date}
         data-body={entry.body ? entry.body : ''}
         data-tags={entry.data.tags ? entry.data.tags.join(',') : ''}>
  <h2>{title}</h2>
  <p>{description}</p>
  <small>{date}</small>
</article>

<style>
.devlog-card {
  padding: 0.6rem 0.8rem;      /* smaller padding */
  border: 2px solid var(--border-sidebar);
  border-radius: 8px;          /* slightly smaller radius */
  margin-bottom: 0.6rem;       /* less space between cards */
  cursor: pointer;
  transition: background 0.2s ease;
  font-size: 0.85rem;          /* compact text size */
}

.devlog-card h2 {
  font-size: 1rem;             /* smaller title */
  margin: 0 0 0.3rem 0;        /* reduce spacing under title */
  color: var(--text-dark);
}

.devlog-card p {
  font-size: 0.75rem;          /* smaller description */
  margin: 0 0 0.3rem 0;
  line-height: 1.2;
  color: var(--text-dark);
}

.devlog-card small {
  font-size: 0.65rem;          /* smaller date text */
  color: var(--color-2);
}

.devlog-card:hover {
  background: var(--color-6);
}
</style>
