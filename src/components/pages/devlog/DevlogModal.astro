<div id="devlog-modal" class="modal">
  <div class="modal-inner">
  
    <button class="modal-close" aria-label="Close">
	  <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" fill="none">
		<line x1="18" y1="6" x2="6" y2="18" />
		<line x1="6" y1="6" x2="18" y2="18" />
	  </svg>
	</button>

    <h2 class="modal-title"></h2>

    <!-- Date with goal title line -->
    <div class="goal-title-line">
      <div class="goal-line"></div>
      <small class="modal-date"></small>
      <div class="goal-line"></div>
    </div>

    <div class="modal-content"></div>
  </div>
</div>

<script client:load>
const modal = document.getElementById('devlog-modal');
const modalInner = modal.querySelector('.modal-inner');
const titleEl = modal.querySelector('.modal-title');
const dateEl = modal.querySelector('.modal-date');
const contentEl = modal.querySelector('.modal-content');
const closeBtn = modal.querySelector('.modal-close');

// Wait for DOM to have cards
const waitForCards = setInterval(() => {
  const cards = document.querySelectorAll('.devlog-card');
  if (cards.length) {
    clearInterval(waitForCards);
    cards.forEach(card => {
      card.addEventListener('click', () => {
        titleEl.innerText = card.dataset.title;
        dateEl.innerText = new Date(card.dataset.date).toDateString();
        contentEl.innerHTML = card.dataset.body;
        // Show modal with animation
        modal.style.display = 'flex';
        requestAnimationFrame(() => modal.classList.add('showing'));
        document.body.style.overflow = 'hidden';
      });
    });
  }
}, 100);

// Close modal function
function closeModal() {
  modal.classList.remove('showing');
  modal.classList.add('hiding');
  setTimeout(() => {
    modal.style.display = 'none';
    modal.classList.remove('hiding');
    document.body.style.overflow = '';
  }, 250); // match transition duration
}

closeBtn.addEventListener('click', closeModal);

// Close when clicking outside modal-inner
modal.addEventListener('click', e => {
  if (!modalInner.contains(e.target)) {
    closeModal();
  }
});
</script>

<style>
/* Goal title line styling */
.goal-title-line {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 1rem 0;
  gap: 0.75rem;
}

.goal-line {
  flex: 1;
  height: 2px;
  background-color: var(--color-4);
  opacity: 1;
}

/* Modal overlay */
.modal {
  display: none; /* hidden initially */
  position: fixed;
  z-index: 9999;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.4);
  -webkit-backdrop-filter: blur(2px);
  backdrop-filter: blur(2px);
  justify-content: center;
  align-items: center;
  padding: 2rem;
  opacity: 0;
  transition: opacity 0.25s ease;
}

.modal.showing {
  opacity: 1;
}

.modal-inner {
  background: var(--color-6);
  border-radius: 12px;
  padding: 2rem;
  margin-top: -5rem;
  width: 100%;
  max-width: 800px;
  max-height: 80vh;
  overflow-y: auto;
  position: relative;
  box-shadow: 0 0 20px rgba(0,0,0,0.5);
  font-family: "Fredoka", sans-serif;
  color: var(--text-main);
  line-height: 1.6;
  border: 5px solid var(--border-sidebar);
  transform: scale(0.99);
  transition: transform 0.25s ease;
}

.modal.showing .modal-inner {
  transform: scale(1);
}

.modal.hiding .modal-inner {
  transform: scale(0.99);
}

/* Close button - thicker */
.modal-close {
  position: absolute;
  top: 0.5rem;
  right: 1rem;
  font-size: 2rem; /* thicker */
  font-weight: bold;
  background: transparent;
  border: none;
  cursor: pointer;
  color: var(--color-2);
}

/* Modal text */
.modal-title {
  font-size: 1.8rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  margin-top: 0rem;
  color: var(--color-2);
}

.modal-date {
  font-size: 0.85rem;
  color: var(--color-2);
  display: block;
  text-align: center;
  white-space: nowrap;
  margin: 0;
}

/* Modal content styling */
.modal-content h1,
.modal-content h2,
.modal-content h3 {
  color: var(--color-2);
  margin-top: 0;
  margin-bottom: 0.5rem;
}

.modal-content p {
  font-size: 1rem;
  margin-bottom: 0.8rem;
}

.modal-content ul,
.modal-content ol {
  margin-left: 1.5rem;
  margin-bottom: 1rem;
}

.modal-content li {
  margin-bottom: 0.5rem;
}

.modal-content a {
  color: var(--color-5);
  text-decoration: underline;
}

.modal-content a:hover {
  color: var(--color-1);
}

/* Mobile adjustments */
@media (max-width: 900px) {
  .goal-title-line {
    gap: 0.5rem;
  }
  .goal-line {
    height: 1px;
  }
  
  .modal-inner {
  background: var(--color-6);
  border-radius: 12px;
  padding: 2rem;
  margin-right: 3rem;
  margin-left: -1rem;
  max-height: 80vh;
}
  
}
</style>
