    <div class="tabs">
      <button data-tab="Illustrations" class="active">Illustrations</button>
      <button data-tab="Animation">Animation</button>
      <button data-tab="3D">3D</button>
      <button data-tab="Storyboard">Storyboard</button>
      <button data-tab="Music">Music</button>
    </div>

    <h1 id="tab-title">Illustrations</h1>

	<section class="bento-gallery" id="illustrations">
	  {galleryItems.Illustrations.map(src => (
		<div class="bento-item">
		  <img class="previewable" src={`illustrations/${src}`} alt="Illustration" />
		</div>
	  ))}
	</section>

<section class="bento-gallery" id="animation" style="display:none">
  {galleryItems.Animation.map(src => {
    const isVideo = src.endsWith(".mp4") || src.endsWith(".mov") || src.endsWith(".webm");
    return (
      <div class="bento-item video-item">
        {isVideo ? (
          <div class="video-wrapper">
            <video
              class="previewable"
              src={`animations/${src}`}
              preload="metadata"
              muted
              playsinline
            ></video>
            <div class="play-overlay">
          <svg viewBox="0 0 64 64" width="40" height="40">
			  <path d="M16,12 L52,32 L16,52 Z" fill="white" stroke="white" stroke-width="10" stroke-linejoin="round"/>
			</svg>
            </div>
          </div>
        ) : (
          <img class="previewable" src={`animations/${src}`} alt="Animation preview" />
        )}
      </div>
    );
  })}
</section>


	<section class="bento-gallery" id="3d" style="display:none">
	  {galleryItems["3D"].filter(src => src.endsWith(".webp")).map(src => (
		<div class="bento-item"><img class="previewable" src={`3d/${src}`} alt="3D WebP" /></div>
	  ))}
	  {galleryItems["3D"].filter(src => src.endsWith(".png")).map(src => (
		<div class="bento-item"><img class="previewable" src={`3d/${src}`} alt="3D PNG" /></div>
	  ))}
	</section>

<section class="bento-gallery" id="storyboard" style="display:none">
  {storyboardItems.map(item => (
    <div class="bento-item storyboard-item">
      <div class="video-wrapper">
        <video
          class="previewable"
          src={`storyboard/${item.src}`}
          preload="metadata"
          muted
          playsinline
