<style>
  main.content {
    flex: 1;
    margin-left: 260px;
    padding: 2rem;
    background: none;
    position: relative;
    z-index: 1;
    color: var(--text-dark);
  }

  .content-wrapper {
    background: none;
  }

  :global(.container-wrapper) {
    background: var(--bg-main);
    border-radius: 1.25rem;
    padding: 2rem;
    border: 2px solid var(--color-4);
    color: var(--text-dark);
  }

  h1 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    color: var(--color-1);
  }

  h2 {
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
    color: var(--color-2);
  }

  .card {
    margin-top: 1.5rem;
    padding: 1.25rem;
    border-radius: 1rem;
    background: var(--color-6);
    border: 2px solid var(--color-5);
  }

  .tabs {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 1rem;
  }

  .tab {
    width: 100%;
    background: var(--color-5);
    border: 2px solid var(--color-5);
    padding: 0.6rem 1rem;
    border-radius: 0.75rem;
    cursor: pointer;
    color: var(--text-dark);
    font-weight: 600;
    text-align: left;
    transition: all 0.25s ease;
    position: relative;
    z-index: 2;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .tab:hover {
    background: var(--color-4);
  }

  .tab.active {
    background: var(--color-3);
    color: var(--text-main);
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
  }

  .arrow {
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
  }

  .tab.active .arrow {
    transform: rotate(180deg);
  }

  .tab-dropdown {
    overflow: hidden;
    max-height: 0;
    transition: max-height 0.35s ease;
  }

  .tab-dropdown.hidden {
    max-height: 0;
  }

  .dropdown-container {
    background: var(--color-6);
    border: 2px solid var(--color-5);
    border-top: none;
    border-bottom-left-radius: 0.75rem;
    border-bottom-right-radius: 0.75rem;
    padding: 1rem;
    margin-top: -2px;
    position: relative;
    z-index: 1;
  }

  ul {
    list-style-type: disc;
    padding-left: 1.25rem;
  }

  @media (max-width: 768px) {
    main.content {
      margin-left: 0;
      padding: 1rem;
    }
  }
</style>
