---

<div class="music-row">
  {musicItems.map((item) => (
    <div class="music-player" data-bpm={item.bpm}>
      <div class="music-cover">
        <img src={`music/${item.cover}`} alt={item.title} />
      </div>
      <div class="music-info">
        <h3>{item.title}</h3>
        <p>{item.artist}</p>
      </div>
      <div class="player-controls">
        <button class="play-btn">
          <img class="play-icon" src="play.svg" alt="Play" />
          <img class="pause-icon" src="pause.svg" alt="Pause" style="display:none;" />
        </button>
        <div class="progress-container">
          <div class="progress-bar"></div>
        </div>
        <audio>
          <source src={`music/${item.src}`} />
        </audio>
      </div>
    </div>
  ))}
</div>

<style>
.music-row {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1.5rem;
  justify-items: center;
  align-items: flex-start;
  background: transparent;
  color: white;
  padding: 0rem;
}

.music-player {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: var(--container);
  color: var(--text-dark);
  border-radius: 1rem;
  padding: 1rem;
  width: 100%;
  max-width: 220px;
  transition: background .2s, border-color .2s;
  border: 2px solid var(--border-container);
}

.music-player.playing {
  border-color: var(--color-5);
  transform: translateY(-2px);
  background: var(--color-6);
}

.music-cover img {
  width: 100%;
  border-radius: .75rem;
  margin-bottom: .5rem;
}

.music-info h3 {
  font-size: 1rem;
  margin: .3rem 0;
  font-weight: 600;
  text-align: center;
}

.music-info p {
  font-size: .85rem;
  margin: 0;
  text-align: center;
  color: var(--color-2);
}

.player-controls {
  display: flex;
  align-items: center;
  gap: .5rem;
  width: 100%;
  margin-top: .5rem;
}

.play-btn {
  background: var(--color-4, #333);
  border: none;
  border-radius: 50%;
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  padding: 0;
}

.play-btn img {
  width: 18px;
  height: 18px;
  display: block;
  object-fit: contain;
}

.progress-container {
  flex: 1;
  height: 6px;
  background: rgba(0, 0, 0, .3);
  border-radius: 3px;
  overflow: hidden;
  cursor: pointer;
  position: relative;
}

.progress-bar {
  height: 100%;
  width: 0%;
  background: var(--color-2);
  border-radius: 3px;
  transition: width .05s linear;
}

/* ---------- MOBILE: LIST LAYOUT ---------- */
@media (max-width: 900px) {
	.music-row {
	  display: flex;
	  flex-direction: column;
	  gap: 0.5rem;
	  padding-left: 0rem; /* keep this at 0 */
	  margin-left: -1rem; /* move the whole list 1rem to the left */
	}

  .music-player {
    max-width: 85%;
    flex-direction: row;
    align-items: center;
    padding: 0.75rem 1rem;
    padding-bottom: 0.45rem;
  }

  .music-cover {
    flex: 0 0 80px;
    margin-right: 0.75rem;
  }

  .music-cover img {
    width: 80px;
    height: 80px;
    object-fit: cover;
  }

  .music-info {
    flex: 1;
    text-align: left;
  }

  .music-info h3 {
    font-size: 0.95rem;
    margin: 0;
  }

  .music-info p {
    font-size: 0.75rem;
  }

  .player-controls {
    flex: 0 0 80px;
    flex-direction: column;
    gap: 0.25rem;
    margin-top: 0;
  }

  .progress-container {
    width: 100%;
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const players = document.querySelectorAll(".music-player");
  const currentlyPlaying = document.querySelector(".currently-playing");
  const currentlyPlayingText = currentlyPlaying.querySelector(".track-info");
  const musicPic = currentlyPlaying.querySelector(".music-pic");
  const volumeControl = document.querySelector(".volume-control");
  const volumeSlider = volumeControl?.querySelector("#volume-slider");

  const updateVolumeVisibility = () => {
    // Show volume control only if any track is playing
    const anyPlaying = Array.from(players).some(p => !p.querySelector("audio").paused);
    if (volumeControl) {
      if (anyPlaying) {
        volumeControl.classList.add("active");
      } else {
        volumeControl.classList.remove("active");
      }
    }
  };

  players.forEach(player => {
    const audio = player.querySelector("audio");
    const playBtn = player.querySelector(".play-btn");
    const playIcon = playBtn.querySelector(".play-icon");
    const pauseIcon = playBtn.querySelector(".pause-icon");
    const progressBar = player.querySelector(".progress-bar");
    const progressContainer = player.querySelector(".progress-container");
    const cover = player.querySelector(".music-cover");
    const bpm = parseFloat(player.dataset.bpm) || 120;

    let isScrubbing = false;
    let scrubPercent = 0;
    let displayedPercent = 0;

    const animateProgress = () => {
      if (isScrubbing) {
        displayedPercent += (scrubPercent - displayedPercent) * 0.3;
      } else if (audio.duration && !audio.paused) {
        displayedPercent = audio.currentTime / audio.duration;
      }
      progressBar.style.width = `${displayedPercent * 100}%`;
      requestAnimationFrame(animateProgress);
    };
    requestAnimationFrame(animateProgress);

    const startBop = (element, bpm) => {
      const duration = 60 / bpm;
      element.classList.add("bopping");
      element.style.animationDuration = `${duration}s`;
    };

    const stopBop = (element) => {
      element.classList.remove("bopping");
    };

    const showCurrentlyPlaying = (title, artist, bpm) => {
      currentlyPlayingText.textContent = `${title} â€” ${artist}`;
      currentlyPlaying.classList.add("active");
      if (musicPic) startBop(musicPic, bpm);
      updateVolumeVisibility();
    };

    const hideCurrentlyPlaying = () => {
      currentlyPlayingText.textContent = "Nothing";
      currentlyPlaying.classList.remove("active");
      if (musicPic) stopBop(musicPic);
      updateVolumeVisibility();
    };

    playBtn.addEventListener("click", () => {
  if (audio.paused) {
    // Pause all other players and remove highlight
    players.forEach(p => {
      const a = p.querySelector("audio");
      if (a !== audio) a.pause();
      p.classList.remove("playing");  // <- remove highlight
      const pi = p.querySelector(".play-icon");
      const paus = p.querySelector(".pause-icon");
      if (pi && paus) {
        pi.style.display = "block";
        paus.style.display = "none";
      }
      stopBop(p.querySelector(".music-cover"));
    });

    // Play current audio & highlight
    audio.play();
    player.classList.add("playing"); // <- add highlight
    startBop(cover, bpm);

    playIcon.style.display = "none";
    pauseIcon.style.display = "block";

    const title = player.querySelector(".music-info h3").textContent;
    const artist = player.querySelector(".music-info p").textContent;
    showCurrentlyPlaying(title, artist, bpm);

    if (volumeSlider) volumeSlider.value = audio.volume;

  } else {
    // Pause current audio & remove highlight
    audio.pause();
    player.classList.remove("playing"); // <- remove highlight
    stopBop(cover);
    playIcon.style.display = "block";
    pauseIcon.style.display = "none";
    hideCurrentlyPlaying();
  }
});


    audio.addEventListener("ended", () => {
      player.classList.remove("playing");
      stopBop(cover);
      playIcon.style.display = "block";
      pauseIcon.style.display = "none";
      displayedPercent = 0;
      hideCurrentlyPlaying();
    });

    if (volumeSlider) {
      volumeSlider.addEventListener("input", e => {
        audio.volume = parseFloat(e.target.value);
      });
    }

    const getPercent = e => {
      const rect = progressContainer.getBoundingClientRect();
      const offsetX = e.clientX ?? e.touches[0].clientX;
      return Math.max(0, Math.min(1, (offsetX - rect.left) / rect.width));
    };

    const handleScrubMove = e => scrubPercent = getPercent(e);
    const handleScrubEnd = () => {
      isScrubbing = false;
      audio.currentTime = scrubPercent * audio.duration;
      document.removeEventListener("mousemove", handleScrubMove);
      document.removeEventListener("mouseup", handleScrubEnd);
      document.removeEventListener("touchmove", handleScrubMove);
      document.removeEventListener("touchend", handleScrubEnd);
    };

    progressContainer.addEventListener("mousedown", e => {
      isScrubbing = true;
      scrubPercent = getPercent(e);
      document.addEventListener("mousemove", handleScrubMove);
      document.addEventListener("mouseup", handleScrubEnd);
    });

    progressContainer.addEventListener("touchstart", e => {
      isScrubbing = true;
      scrubPercent = getPercent(e);
      document.addEventListener("touchmove", handleScrubMove);
      document.addEventListener("touchend", handleScrubEnd);
    });

    progressContainer.addEventListener("click", e => {
      if (!isScrubbing) {
        const percent = getPercent(e);
        displayedPercent = percent;
        scrubPercent = percent;
        audio.currentTime = percent * audio.duration;
      }
    });
  });

  currentlyPlaying.addEventListener("click", () => {
    const event = new CustomEvent("switchContent", { detail: { target: "work" } });
    window.dispatchEvent(event);
    const musicTabBtn = document.querySelector('.tabs button[data-tab="Music"]');
    if (musicTabBtn) musicTabBtn.click();
  });
});
</script>
