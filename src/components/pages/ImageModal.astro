<!-- ImageModal.astro -->
<div id="media-modal" class="media-modal" aria-hidden="true">
  <div class="media-overlay"></div>

  <!-- Fixed arrows outside image box -->
  <button class="nav-arrow left" id="prev-btn">❮</button>
  <button class="nav-arrow right" id="next-btn">❯</button>

  <div class="media-box">
    <img id="modal-img" class="media-content" />
    <video id="modal-video" class="media-content" controls></video>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const modal = document.getElementById("media-modal");
  const overlay = modal.querySelector(".media-overlay");
  const imgEl = document.getElementById("modal-img");
  const vidEl = document.getElementById("modal-video");
  const prevBtn = document.getElementById("prev-btn");
  const nextBtn = document.getElementById("next-btn");

  let currentIndex = -1;
  let currentGallery = [];

  document.body.appendChild(modal);

  function openModal(el) {
    // get only visible gallery items from the same section
    const section = el.closest(".bento-gallery, .bento-grid");
    currentGallery = Array.from(section.querySelectorAll(".previewable")).filter(i => {
      return i.closest(".bento-item").style.display !== "none";
    });

    const index = currentGallery.indexOf(el);
    if (index === -1) return;
    currentIndex = index;

    // Immediately stop any playing video
    vidEl.pause();
    vidEl.src = "";

    const isVideo = el.tagName.toLowerCase() === "video";

    if (isVideo) {
      vidEl.src = el.src;
      vidEl.style.display = "block";
      imgEl.style.display = "none";
    } else {
      imgEl.src = el.dataset.full || el.src;
      imgEl.style.display = "block";
      vidEl.style.display = "none";
    }

    modal.setAttribute("aria-hidden", "false");
    document.body.style.overflow = "hidden";
    modal.classList.add("show");
    requestAnimationFrame(() => modal.classList.add("visible"));
  }

  function closeModal() {
    modal.classList.remove("visible");
    vidEl.pause();
    vidEl.src = "";
    imgEl.src = "";
    document.body.style.overflow = "";

    modal.addEventListener(
      "transitionend",
      () => {
        modal.classList.remove("show");
        modal.setAttribute("aria-hidden", "true");
      },
      { once: true }
    );
  }

  function showNext() {
    if (!currentGallery.length) return;
    if (currentIndex < currentGallery.length - 1) {
      openModal(currentGallery[currentIndex + 1]);
    }
  }

  function showPrev() {
    if (!currentGallery.length) return;
    if (currentIndex > 0) {
      openModal(currentGallery[currentIndex - 1]);
    }
  }

  document.body.addEventListener("click", (e) => {
    const el = e.target.closest(".previewable");
    if (!el) return;
    openModal(el);
  });

  overlay.addEventListener("click", closeModal);
  prevBtn.addEventListener("click", showPrev);
  nextBtn.addEventListener("click", showNext);

  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape") closeModal();
    if (e.key === "ArrowRight") showNext();
    if (e.key === "ArrowLeft") showPrev();
  });
});
</script>

<style>
.media-modal {
  position: fixed;
  inset: 0;
  display: grid;
  place-items: center;
  z-index: 9999;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.35s ease;
}

.media-modal.show {
  display: grid;
}

.media-modal.visible {
  opacity: 1;
  pointer-events: auto;
}

.media-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.85);
}

.media-box {
  position: relative;
  background: #000;
  border-radius: 0.75rem;
  max-width: 90%;
  max-height: 90%;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  box-shadow: 0 0 30px rgba(0,0,0,0.5);
  transform: scale(0.95);
  transition: transform 0.35s ease;
}

.media-modal.visible .media-box {
  transform: scale(1);
}

.media-content {
  max-width: 100%;
  max-height: 80vh;
  object-fit: contain;
  display: block;
}

.media-content.show {
  display: block;
}

/* Optional navigation arrows */
.nav-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  font-size: 2rem;
  color: #fff;
  background: rgba(0,0,0,0.3);
  border: none;
  padding: 0.5rem 1rem;
  cursor: pointer;
  z-index: 10;
  border-radius: 0.5rem;
  user-select: none;
}
.nav-arrow.left { left: 1rem; }
.nav-arrow.right { right: 1rem; }
</style>
