<!-- ImageModal.astro -->
<div id="media-modal" class="media-modal" aria-hidden="true">
  <div class="media-overlay"></div>
  <div class="media-box">
    <img id="modal-img" class="media-content" />
    <video id="modal-video" class="media-content" controls></video>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const modal = document.getElementById("media-modal");
  const overlay = modal.querySelector(".media-overlay");
  const imgEl = document.getElementById("modal-img");
  const vidEl = document.getElementById("modal-video");
  const closeBtn = modal.querySelector(".close-btn");

  document.body.appendChild(modal);

  function openModal(el) {
    const isVideo = el.tagName.toLowerCase() === "video";

    if (isVideo) {
      imgEl.style.display = "none";
      vidEl.style.display = "block";
      vidEl.src = el.src;
      vidEl.play();
    } else {
      vidEl.style.display = "none";
      imgEl.style.display = "block";
      imgEl.src = el.dataset.full || el.src;
    }

    modal.setAttribute("aria-hidden", "false");
    document.body.style.overflow = "hidden";

    // Trigger fade-in
    modal.classList.add("show");
    requestAnimationFrame(() => {
      modal.classList.add("visible");
    });
  }

  function closeModal() {
    modal.classList.remove("visible"); // trigger fade-out
    vidEl.pause();
    vidEl.src = "";
    imgEl.src = "";
    document.body.style.overflow = ""; // restore scroll

    // Remove from DOM visually after transition
    modal.addEventListener(
      "transitionend",
      () => {
        modal.classList.remove("show");
        modal.setAttribute("aria-hidden", "true");
      },
      { once: true }
    );
  }

  document.body.addEventListener("click", (e) => {
    const el = e.target.closest(".previewable");
    if (!el) return;
    openModal(el);
  });

  overlay.addEventListener("click", closeModal);
  document.addEventListener("keydown", (e) => { if (e.key === "Escape") closeModal(); });
});
</script>

<style>
.media-modal {
  position: fixed;
  inset: 0;
  display: grid;
  place-items: center;
  z-index: 9999;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.35s ease;
}

.media-modal.show {
  display: grid;
}

.media-modal.visible {
  opacity: 1;
  pointer-events: auto;
}

.media-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.85);
}

.media-box {
  position: relative;
  background: #000;
  border-radius: 0.75rem;
  max-width: 90%;
  max-height: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: auto;
  box-shadow: 0 0 30px rgba(0,0,0,0.5);
  transform: scale(0.95);
  transition: transform 0.35s ease;
}

.media-modal.visible .media-box {
  transform: scale(1);
}

.media-content {
  max-width: 100%;
  max-height: 80vh;
  object-fit: contain;
  display: none;
}

.media-caption {
  color: #fff;
  font-size: 0.9rem;
  text-align: center;
  padding: 0.5rem 1rem 1rem;
  opacity: 0.8;
}
</style>
