---
import "../styles/global.css";
import BackgroundGrid from '../components/BackgroundGrid.astro';
import Sidebar from '../components/Sidebar.astro';
import ContentSwitcher from '../components/ContentSwitcher.astro';
import DarkModeToggle from '../components/DarkModeToggle.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>zurra's site of fun and whimsy</title>

    <!-- SVG Favicon -->
    <link rel="icon" href="favicon.svg" type="image/svg+xml" />
  </head>

  <body>
    <div id="page-wrapper">
      <!-- Background / Sidebar / Toggles -->
      <BackgroundGrid />
      <Sidebar />
      <DarkModeToggle />

      <!-- Main content -->
      <main id="main-content" class="content">
        <ContentSwitcher client:load />
      </main>
    </div>
  </body>
</html>

<style>
      body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
      }

      /* Mobile adjustments */
      @media (max-width: 900px) {
        #page-wrapper {
          flex-direction: column;
        }

        .dark-mode-toggle {
          position: fixed;
          top: 1rem;
          right: 1rem;
          z-index: 200;
        }
      }
	  
        main.content {
          padding: 0rem;
        }
      }
    </style>